<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/calculatortxtView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp"
        android:text="The kinematic toolbox will calculate any kinematic equations." />

    <TextView
        android:id="@+id/toolBoxtxtView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="120dp"
        android:text="Use the calculator feature to change units." />

    <TextView
        android:id="@+id/dictionarytxtView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="290dp"
        android:text="Use the dictionary page to learn physics terms and formulas." />

    <TextView
        android:id="@+id/firstApptxtView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="400dp"
        android:text="THIS APP IS A SCHOOL PROJECT THAT IS NOT FINISHED. LOOK OUT FOR FUTURE UPDATES" />

    <ImageView
        android:id="@+id/calculatorView"
        android:layout_width="76dp"
        android:layout_height="69dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/calculator" />

    <ImageView
        android:id="@+id/toolBoxView"
        android:layout_width="71dp"
        android:layout_height="83dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/carpenter" />

    <ImageView
        android:id="@+id/bookView"
        android:layout_width="71dp"
        android:layout_height="83dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290dp"
        android:src="@drawable/book" />

</FrameLayout>