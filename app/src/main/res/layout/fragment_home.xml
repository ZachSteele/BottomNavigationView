<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/calculatortxtView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="110dp"
        android:text="Use the calculator feature to change units." />

    <ImageView
        android:id="@+id/calculatorView"
        android:layout_width="76dp"
        android:layout_height="69dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/calculator" />

    <TextView
        android:id="@+id/firstApptxtView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="400dp" />


    <ImageView
        android:id="@+id/toolBoxView"
        android:layout_width="71dp"
        android:layout_height="83dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/carpenter" />

    <TextView
        android:id="@+id/toolboxtxtView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="230dp"
        android:text="The kinematic toolbox will calculate any kinematic equations." />

    <TextView
        android:id="@+id/dictionarytxtView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="370dp"
        android:text="Use the dictionary page to learn physics terms and formulas." />

    <ImageView
        android:id="@+id/bookView"
        android:layout_width="71dp"
        android:layout_height="83dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="360dp"
        android:src="@drawable/book" />
</FrameLayout>